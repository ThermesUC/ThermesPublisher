---
interface Props {
  game: {
    title: string;
    status: string;
    description: string;
    image: string;
    tags: string[];
    releaseWindow: string;
  };
}

const { game } = Astro.props;
---

<article class="game-card">
  <div class="game-image">
    <img src={game.image} alt={game.title} />
    <div class="status">{game.status}</div>
  </div>
  <div class="content">
    <h2>{game.title}</h2>
    <div class="tags">
      {game.tags.map(tag => <span class="tag">{tag}</span>)}
    </div>
    <p class="description">{game.description}</p>
    <div class="footer">
      <span class="release">Expected: {game.releaseWindow}</span>
      <a href="#" class="more-info">MORE_INFO <span class="arrow">â†’</span></a>
    </div>
  </div>
</article>

<style>
  .game-card {
    background: var(--card-bg);
    border: 2px solid var(--text);
    overflow: hidden;
  }

  .game-image {
    position: relative;
    height: 300px;
  }

  .game-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .status {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--accent);
    color: white;
    padding: 0.5rem 1rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    border: 2px solid var(--text);
  }

  .content {
    padding: 2rem;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    font-family: 'Space Grotesk', sans-serif;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: var(--bg);
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--text);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
  }

  .description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
    font-family: 'Space Grotesk', sans-serif;
  }

  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--text);
    padding-top: 1rem;
  }

  .release {
    font-family: 'JetBrains Mono', monospace;
    color: var(--text-secondary);
  }

  .more-info {
    color: var(--text);
    text-decoration: none;
    font-weight: 600;
    font-family: 'JetBrains Mono', monospace;
    padding: 0.5rem 1rem;
    border: 1px solid var(--text);
  }

  .more-info:hover {
    background: var(--text);
    color: var(--card-bg);
  }

  .arrow {
    display: inline-block;
    transition: transform 0.2s ease;
  }

  .more-info:hover .arrow {
    transform: translateX(4px);
  }
</style>
