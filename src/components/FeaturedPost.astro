---
interface Props {
	post: any;
}

const { post } = Astro.props;
const { frontmatter } = post;
---

<article class="featured-post">
	{frontmatter.image && (
		<img src={frontmatter.image} alt={frontmatter.title} />
	)}
	<div class="content">
		<span class="date">[ {new Date(frontmatter.date).toLocaleDateString()} ]</span>
		<h3>{frontmatter.title}</h3>
		<p>{frontmatter.excerpt}</p>
		<a href={post.url} class="read-more">READ_MORE <span class="arrow">â†’</span></a>
	</div>
</article>

<style>
	.featured-post {
		display: grid;
		grid-template-columns: 1.5fr 1fr;
		gap: 2rem;
		background: var(--card-bg);
		border: 2px solid var(--text);
		overflow: hidden;
		margin-bottom: 3rem;
	}

	.featured-post img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.content {
		padding: 2rem;
	}

	.date {
		color: var(--text-secondary);
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.9rem;
	}

	h3 {
		margin: 0.5rem 0;
		font-size: 1.8rem;
		font-weight: 600;
		font-family: 'Space Grotesk', sans-serif;
	}

	p {
		color: var(--text-secondary);
		margin: 1rem 0;
		line-height: 1.6;
		font-family: 'Space Grotesk', sans-serif;
	}

	.read-more {
		display: inline-block;
		color: var(--text);
		text-decoration: none;
		font-weight: 600;
		margin-top: 1rem;
		font-family: 'JetBrains Mono', monospace;
		padding: 0.5rem 1rem;
		border: 1px solid var(--text);
	}

	.read-more:hover {
		background: var(--text);
		color: var(--card-bg);
	}

	.arrow {
		display: inline-block;
		transition: transform 0.2s ease;
	}

	.read-more:hover .arrow {
		transform: translateX(4px);
	}

	@media (max-width: 768px) {
		.featured-post {
			grid-template-columns: 1fr;
		}
	}
</style>
